<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="author" content="Vatsal Mihir">
  <meta name="description" content="Farmazon Updated">
  <meta name="keywords" content="">

  <title>Farmazon Marketplace | Website</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/marketplace.js"></script>
    <script src="/js/logout.js"></script>
    <style>

    span{
      color:#F9F6A1;
    }

    .nav-bar{
      position: absolute;
      top:0;
      z-index: 1;
      background-color: #002540
    }
    .item{
      display: flex;
      justify-content: center;
      margin-top: 10px !important;
      margin-bottom: 10px;
    }
    .item-division{
      width:50%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .item-division2{
      width:50%;
      display: flex;
      flex-direction: column;
    }
    .img-item{
      border-radius: 50%;
      width:100px;
      height: 100px;
    }
    .item-details{

    }
    .current{
      border-bottom-color: #F60100;
      font-size: 25px;
      border-bottom-width: 2px;
      border-bottom-style: solid;
      width: 300px;
      text-align: center;
    }

    #second{
      color:#99DA69;
    }

    #contact{
      background-color: rgb(0,100,0,0.5);
    }

    #file{
      color: #F9F6A1;
      font-weight: bold;
    }

    #namelabel,#phonelabel{
      color:black;
      font-weight: bold;
    }

    #show{
        margin-right:150px;
    }

    #signup-form{
      background-color: rgba(255,255,255,0.4);
      padding:30px;
      min-width:500px;
      margin-left:30px;
    }

    #button{
      color:#F9F6A1;
      font-weight: bold;
    }

      .flex-container {
        display: flex;
        height: 300px;
        justify-content: center;
        align-items: center;
      }
      .nav-bar{
        position: absolute;
        top:0;
        z-index: 1;
        background-color:rgb(255,255,255,0.3);
      }

      .nav-bar a{
          color:#99DA69;
          font-size: 20px;
      }

      .landing{
        position: relative;
        top:0;
        left:0;
        width: 100%;
      }
      .landing-image{
        object-fit: cover;
        width: 100%;
        height: 100vh;
      }
      .landing-container{
        top:0;
        left:0;
        position: absolute;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0,0,0,0.6)
      }
      .flex-container{
        margin-left: 30px;
        margin-right: 30px;
      }
      .button-location{
        display:inline-block;
      }
      .about-header{
        font-size: 25px;
        border-bottom-color: #002540;
        border-bottom-style: solid;
        border-bottom-width: 4px;
      }
      .about-body{
        font-size:15px;
      }

    </style>

</head>
<body style="background-color:#033125">
  <div class="modal">
    <div class="modal-content">
      <form id="bid">
        <div class="row">
          <div class="input-field col s12 l6 m6">
            <input id="price" type="number" class="validate">
            <label for="price">Price</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 l6 m6">
            <input id="quantity" type="number" class="validate">
            <label for="quantity">Quantity</label>
          </div>
        </div>
        <input type="submit" value="Send bid" class="col s12 waves-effect waves-light btn">
      </form>
    </div>
  </div>
  <nav class="nav-wrapper nav-bar">
    <a href="#" style="margin-left:20px" class="brand-logo">Farmazon</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/">Newsfeed</a></li>
        <li><a href="/prediction">Prediction</a></li>
        <li><a href="/">Transactions</a></li>
        <li><a href="/add">Add a product</a></li>
        <li><button id="logout" class="waves-effect waves-light btn" id="logout" style="margin-right:10px;background-color:#F60100;">Logout</button></li>
      </ul>
  </nav>
  <br><br><br><br><br><br>
  <div class="container-fluid">
    <div class="row" style="display:flex;justify-content: center;">
      <div class="col s10 m6 l4" style="margin:0 auto;">
        <div class="current" style="margin:0 auto;color:#F9F6A1;">Products</div>
        <br>
        <div class="collection">
        <% listings.forEach(function(listing){ %>
          <% if(!listing.expired) { %>
            <div class="collection-item item">
              <div class="item-division">
                <img class="img-item" src="<%= listing.image %>">
              </div>
              <div class="item-division2">
                <div><%= listing.product_type %></div>
                <div><%= listing.date %></div>
                <div><%= listing.price %></div>
                <div><%= listing.type %></div>
                <div><%= listing.quantity %></div>
                <a href="/placebid?id=<%= listing._id %>&by=<%= listing.by %>" id="button" class="waves-effect waves-light btn">Place bid</a>
              </div>
            </div>
          <% } %>
        <% }) %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
