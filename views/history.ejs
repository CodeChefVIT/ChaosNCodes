<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/dashboard.js"></script>
    <style>
    .nav-bar{
      position: absolute;
      top:0;
      z-index: 1;
      background-color: #002540
    }
    .item{
      display: flex;
      justify-content: center;
      margin-top: 10px !important;
      margin-bottom: 10px;
    }
    .item-division{
      width:50%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .item-division2{
      width:50%;
      display: flex;
      flex-direction: column;
    }
    .img-item{
      border-radius: 50%;
      width:100px;
      height: 100px;
    }
    .item-details{

    }
    .current{
      border-bottom-color: #F60100;
      font-size: 25px;
      border-bottom-width: 2px;
      border-bottom-style: solid;
      width: 300px;
      text-align: center;
    }
    </style>

</head>
<body>
  <nav class="nav-wrapper nav-bar">
    <a href="#" style="margin-left:20px" class="brand-logo"><%= name %></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/marketplace">Marketplace</a></li>
        <li><a href="/newsfeed">Newsfeed</a></li>
        <li><a href="/prediction">Prediction</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><button class="waves-effect waves-light btn" style="margin-right:10px;background-color:#F60100;">Logout</button></li>
      </ul>
  </nav>
  <br><br><br><br><br><br>
  <div class="container-fluid">
    <div class="row" style="display:flex;justify-content: center;">
      <div class="col s10 m6 l4" style="margin:0 auto;">
        <div class="current" style="margin:0 auto;">Products</div>
        <br>
        <div class="collection">
        <% data.forEach(function(listing){ %>
            <div class="collection-item item">
              <div class="item-division">
                <img class="img-item" src="<%= listing.listing.image %>">
              </div>
              <div class="item-division2">
                <div style="font-size:15px;">Product details</div>
                <div><%= listing.listing.product_type %></div>
                <div><%= listing.listing.date %></div>
                <div>Price:<%= listing.listing.price %></div>
                <div>Type:<%= listing.listing.type %></div>
                <div>Quantity: <%= listing.listing.quantity %></div>
                <div>Left: <%= listing.listing.current_quantity %></div>
                <div>To: <%= listing.to.name %></div>
                <div>By: <%= listing.by.name %></div>
                <div style="font-size:15px;">Bids</div>
                <div style="border-bottom-style:solid;border-bottom-width:2px;display:flex;flex-direction: column;padding-bottom:5px;">
                <% listing.amounts.forEach(function(amount){ %>
                  <div>Price: <%= amount.amount %></div>
                  <div>Quantity: <%= amount.quantity %></div>
                  <div>Status: <%= amount.status %></div>
                  <a href="/respondToBid?bid_id=<%= amount._id %>&bid=<%= listing._id %>" class="waves-effect waves-light btn">Respond</a>
                <% }) %>

              </div>
            </div>
        <% }) %>
        </div>
      </div>
    </div>
  </div>


</body>
</html>
